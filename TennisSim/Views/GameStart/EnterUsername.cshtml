@model TennisSim.Models.UserName

@{
    ViewData["Title"] = "Enter Username";
}

<link rel="stylesheet" type="text/css" href="~/css/newgame.css" />

<style>
    .alert-danger {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #7214;
        border-radius: 10px;
        padding: 15px;
        font-size: 16px;
        margin-bottom: 20px;
        position: relative;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card card-custom">
                <div class="text-center tennis-icon">
                    <i class="fas fa-tennis-ball fa-4x text-warning"></i>
                </div>
                <h2 class="text-center text-warning mb-4">Enter Your Username</h2>

                <form method="post" action="/GameStart/EnterUsername">
                    <div class="mb-4">
                        <label for="UserName" class="form-label text-white">Username</label>
                        <input type="text" class="form-control input-custom" id="UserName" name="UserName" required />
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in ViewData.ModelState["UserName"].Errors)
                            {
                                <p>@error.ErrorMessage</p>
                            }
                        </div>
                    }

                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-custom">
                            <i class="fas fa-play-circle me-2"></i> Start Game
                        </button>
                    </div>
                </form>

                <p class="footer-message mt-3 text-center text-white">
                    By submitting your username, you're ready to start your tennis journey!
                </p>
            </div>
        </div>
    </div>
</div>
